<h1>Editing post</h1>

<% form_for([:admin, @post.show, @post]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :slug %><br />
    <%= f.text_field :slug %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Modifier" %>
  </p>
<% end %>

<%= link_to 'Back', admin_show_posts_path(@post.show) %>
