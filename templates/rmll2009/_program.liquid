<h2>Le programme</h2>
<div class="part">
<div class="day" id="mardi">
 <h3>Mardi</h3>
 <ul>
  {% for episode in show.tag.mardi reversed %}
    <li><span class="dtstart">{{ episode.broadcasted_at|date:'%H:%M' }}</span> <a href="{{episode.url_for}}">{{episode.title |truncate:35}}</a></li>
  {% endfor %}
 </ul>
</div>

