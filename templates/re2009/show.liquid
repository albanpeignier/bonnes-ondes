<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html lang="fr">
 <head>
  <title>Esperanzah! 2009 - Radio</title>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <link rel="stylesheet" type="text/css" href="{{theme.url_for_assets}}/css/screen.css" media="screen" />
  <link rel="alternate" type="application/rss+xml" title="{{show.name}}" href="{{ show.url_for_podcast }}" />
 </head>
 <body>
  <div id="wrapper">
   <a href="http://www.esperanzah.be">
    {% include 're2009/header' %}
   </a>
   <div id="page">
     {% unless show.tag.jeudi == empty %}
       <p class="program"><a href="#program" onclick="Effect.ScrollTo('program'); return false;">Le programme &#8595;</a>
     {% endunless %}
    <div id="content">
      <h1>{{show.name}}</h1>
      <p>
        {{ show.description | textilize }}
      </p>
     {% for episode in show.popular_episodes limit:7 %}
      {% include 're2009/episode' %}
     {% endfor %}
    </div>
    <div id="sidebar">
     {% include 're2009/sidebar' %}
    </div>
    <div id="program">
     {% include 're2009/program' %}
    </div>
   </div>
   <div id="footer"></div>
  </div>
  {% include 're2009/javascript' %}
 </body>
</html>
