<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html lang="fr">
 <head>
  <title>La Musique Assiégée - Chronique - {{episode.title}}</title>
  <meta http-equiv="content-type" content="text/html; charset=utf-8">
  <link rel="stylesheet" type="text/css" href="{{theme.url_for_assets}}/css/screen.css" media="screen">
  <link rel="alternate" type="application/rss+xml" title="{{episode.show.name}}" href="{{episode.show.url_for_podcast}}">
 </head>
 <body>
  <div id="page">
    <div id="header">
      <h1>La Musique Assiégée - Chronique - {{episode.title}}</h1>
    </div>
   <hr/>
    {% include 'jouerjuste/menu' %}
   <hr/>
   <div id="frame">
     <div id="sidebar">
       <p><a class="back" href="{{episode.show.url_for}}">Tous les chroniques</a></p>
       {% include 'jouerjuste/sidebar' %}
     </div>

     <div id="content">
      <h2>{{episode.title}}</h2>

      <div class="entry-content">
        {{episode.image.tag}}
        {{episode.description | textilize}}
      </div>

      {% unless episode.contents == empty %}
      <div id="listen">
 	      <h3>Ecoutez</h3>
   	    {% for content in episode.contents %}
          <div class="audio" id="audio-{{forloop.index}}">
            <p class="duration">Durée : {{content.duration}} minutes</p>
            {{ content.embedded_player }}
            <p class="broadcast"><a href="{{content.url_for_playlist}}" title="Ecoutez avec votre lecteur audio préféré">Ecoutez avec votre lecteur audio préféré &#8594;</a></p>
          </div>
        {% endfor %}
      </div>
      {% endunless %}
     </div>
    </div>
  </div>
 </body>
</html>
