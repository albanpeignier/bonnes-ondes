<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html lang="fr" class="popup">
 <head>
  <title>Esperanzah! 2008 - Radio - Ecouter {{content.episode.title}} - {{content.name}}</title>
  <meta http-equiv="content-type" content="text/html; charset=utf-8">
  <link rel="stylesheet" type="text/css" href="{{theme.url_for_assets}}/css/screen.css" media="screen">
  <link rel="stylesheet" type="text/css" href="{{theme.url_for_assets}}/css/print.css" media="print">
  <link rel="alternate" type="application/rss+xml" title="{{content.episde.show.name}}" href="{{show.url_for_podcast}}">
 </head>
 <body>
  <div id="page">
    <h3>{{content.episode.title}}</h3>
    {{content.episode.description | textilize | strip_tags | truncate :400}}
    <div class="player" id="player-1">
     {{content.episode.image.tag_for_thumb}}
     <h4>{{content.name}} &mdash; <span class="duration">{{content.duration}} minutes</span></h4>
     {{ content.embedded_player }}
     <p class="broadcast"><a href="{{content.url_for_playlist}}" title="Ecoutez avec votre lecteur audio préféré">Ecoutez avec votre lecteur audio préféré &#8594;</a></p>
    </div>
  </div>
 </body>
</html>
