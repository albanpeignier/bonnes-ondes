<h2>Le programme</h2>
<div class="day" id="thursday">
 <h3>Jeudi</h3>
 <ul>
  {% for episode in show.tags.jeudi reversed %}
    <li><span class="dtstart">{{ episode.broadcasted_at|date:'%H:%M' }}</span> <a href="{{episode.url_for}}">{{episode.title}}</a></li>
  {% endfor %}
 </ul>

